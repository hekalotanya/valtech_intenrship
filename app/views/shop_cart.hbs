<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop Cart</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Jost&display=swap');
  </style>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Lobster+Two&display=swap');
    </style>
    <link rel="stylesheet" href="/main.css">
</head>
<body class="cart_page grid">
  {{> header_grid }}
  <main class="grid grid__item--1--12">
    {{> title_section }}
    <section class="cart_list cart_list grid__item--1--12 grid">
      <div class="cart_list__names_of_column grid__item--1--12 grid">
        <span class="name_of_column grid__item--1--5">Product name</span>
        <span class="name_of_column grid__item--6--7">Price</span>
        <span class="name_of_column grid__item--8--10">Quantity</span>
        <span class="name_of_column grid__item--11--11">Total</span>
      </div>
      <div class="cart_list__products grid__item--1--12">
        {{!-- {{#if noResult}}
            <h1 class="cart__result">IT IS EMPTY :(</h1>
        {{/if}} --}}
        {{#each products}}
          <div class="cart_list__products__item item grid" id={{this.id}}>
            <div class="item__name grid__item--1--5">
              <img class="item__name__image" src={{this.images.[0].path}} alt="">
              <div class="item__name__block">
                <span class="block__name">{{this.name}}</span>
                <span class="block__category">{{this.category.name}}</span>
              </div>
            </div>
            <div class="item__price grid__item--6--7 price{{this.id}}">${{this.price}}</div>
            <div class="item__quantity grid__item--8--10">
              <div class="quantity__block" id={{this.id}}>
                <svg class="quantity__block__decrease arrow" id={{this.id}} width="5" height="8" viewBox="0 0 5 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M0.771484 4.22852L3.81836 7.27539C4.0332 7.49023 4.24805 7.49023 4.46289 7.27539C4.56055 7.17773 4.60938 7.07031 4.60938 6.95312C4.60938 6.81641 4.56055 6.70898 4.46289 6.63086L1.76758 3.90625L4.46289 1.18164C4.69727 0.966797 4.69727 0.751953 4.46289 0.537109C4.24805 0.322266 4.0332 0.322266 3.81836 0.537109L0.771484 3.58398C0.673828 3.66211 0.625 3.76953 0.625 3.90625C0.625 4.04297 0.673828 4.15039 0.771484 4.22852Z" fill="#888888"/>
                </svg>
                <span class="quantity__block__value value{{this.id}}" id={{this.id}}>1</span>
                <svg class="quantity__block__increase arrow" id={{this.id}} width="5" height="8" viewBox="0 0 5 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M0.474609 6.63086C0.240234 6.8457 0.230469 7.06055 0.445312 7.27539C0.679688 7.49023 0.904297 7.49023 1.11914 7.27539L4.16602 4.22852C4.26367 4.15039 4.3125 4.04297 4.3125 3.90625C4.3125 3.76953 4.26367 3.66211 4.16602 3.58398L1.11914 0.537109C0.904297 0.322266 0.679688 0.322266 0.445312 0.537109C0.230469 0.751953 0.240234 0.966797 0.474609 1.18164L3.16992 3.90625L0.474609 6.63086Z" fill="#888888"/>
                </svg>
              </div>
            </div>
            <div class="item__total grid__item--11--11 total{{this.id}}" id={{this.id}}>${{this.price}}</div>
            <div class="item__delete grid__item--12--12" id={{this.id}}>
              <svg width="23" height="23" viewBox="0 0 23 23" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19.6719 3.32812C17.4844 1.10938 14.8438 0 11.75 0C8.65625 0 6 1.10938 3.78125 3.32812C1.59375 5.51563 0.5 8.15625 0.5 11.25C0.5 14.3438 1.59375 17 3.78125 19.2188C6 21.4062 8.65625 22.5 11.75 22.5C14.8438 22.5 17.4844 21.4062 19.6719 19.2188C21.8906 17 23 14.3438 23 11.25C23 8.15625 21.8906 5.51563 19.6719 3.32812ZM18.6406 18.1406C16.7344 20.0469 14.4375 21 11.75 21C9.0625 21 6.76562 20.0469 4.85938 18.1406C2.95312 16.2344 2 13.9375 2 11.25C2 8.5625 2.95312 6.26562 4.85938 4.35938C6.76562 2.45312 9.0625 1.5 11.75 1.5C14.4375 1.5 16.7344 2.45312 18.6406 4.35938C20.5469 6.26562 21.5 8.5625 21.5 11.25C21.5 13.9375 20.5469 16.2344 18.6406 18.1406ZM15.9219 6.04688L11.7969 10.1719L8.09375 6.04688C7.71875 5.67188 7.35938 5.67188 7.01562 6.04688C6.67188 6.39062 6.67188 6.73438 7.01562 7.07812L10.7188 11.2031L6.54688 15.4219C6.20312 15.7656 6.20312 16.125 6.54688 16.5C6.89062 16.8438 7.23438 16.8281 7.57812 16.4531L11.7031 12.3281L15.4062 16.4531C15.7812 16.8281 16.1406 16.8438 16.4844 16.5C16.8281 16.125 16.8281 15.7656 16.4844 15.4219L12.7812 11.2969L16.9531 7.07812C17.3281 6.73438 17.3281 6.39062 16.9531 6.04688C16.6094 5.67188 16.2656 5.67188 15.9219 6.04688Z" fill="#E32D2D"/>
            </svg>
            </div>
          </div>
        {{/each}}
      </div>
    </section>
    <section class="cart_menu grid__item--1--12 grid">
      <div class="cart_menu__buttons grid__item--1--6">
        <button class="cart_menu__buttons__update">UPDATE CART</button>
        <a  href="/products" class="cart_menu__buttons__continue">CONTINUE SHOPPING</a>
      </div>
      <div class="cart_menu__totals grid__item--8--12">
        <h2 class="cart_menu__totals__sign">CART TOTALS</h2>
        <div class="cart_menu__totals__amount">
          <span class="amount__sign">Total</span>
          <span class="amount__summ">${{totalPrice}}</span>
        </div>
        <button class="cart_menu__totals__checkout">PROCEED TO CHECKOUT</button>
      </div>
    </section>
  </main>
  {{> footer_grid }}
  {{> copyright }}
  <script src="/bundle.js"></script>
</body>
</html>