<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop List</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Jost&display=swap');
  </style>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Lobster+Two&display=swap');
    </style>
    <link rel="stylesheet" href="/main.css">
</head>
<body class="products_page grid">
  {{> preloader}}
  {{> header_grid }}
  <div class="error__message_fav">You must log in</div>
  <main class="grid grid__item--1--12">
    {{> title_section }}
    <section class="main__search search grid__item--1--12 grid">
      <div class="search__input_block grid__item--1--4">
        <form action="http://localhost:3000/products/params" class="search__form form" method="GET">
          <input class="input plp_search" type="text" name="name" id="search" placeholder="Search" required>
          <button type="submit" class="button">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M19.826 18.98L14.9657 14.1197C16.2695 12.6208 17.0588 10.6652 17.0588 8.52772C17.0588 3.82262 13.2318 0 8.53113 0C3.82603 0 0.00341797 3.82705 0.00341797 8.52772C0.00341797 13.2284 3.83047 17.0554 8.53113 17.0554C10.6686 17.0554 12.6243 16.2661 14.1232 14.9623L18.9835 19.8226C19.0988 19.9379 19.254 20 19.4047 20C19.5555 20 19.7107 19.9424 19.826 19.8226C20.0566 19.592 20.0566 19.2106 19.826 18.98ZM1.19632 8.52772C1.19632 4.48337 4.48679 1.19734 8.5267 1.19734C12.571 1.19734 15.8571 4.4878 15.8571 8.52772C15.8571 12.5676 12.571 15.8625 8.5267 15.8625C4.48679 15.8625 1.19632 12.5721 1.19632 8.52772Z" fill="black"/>
            </svg>
          </button>
        </form>
      </div>
      <div class="search__showing_settings grid__item--5--12">
        <div class="number_of_results">Showing {{firstProduct}}â€“{{lastProduct}} of {{resultLength}} results</div>
        <div class="sorting">
          <div class="icons">
          {{> sorting_two}}
          {{> sorting_list}}
          </div>
          <select name="sort" id="sort" class="sorting__default">
            <option value="default">Default sorting</option>
            <option value="price">Price</option>
            <option value="sale">Sale</option>
            <option value="best_seller">Popular</option>
          </select>
        </div>
      </div>
    </section>
    <section class="main__list_of_products list_of_products grid__item--1--12 grid">
      <div class="phone_filter">
        <svg class="filter_icon" width="34" height="26" viewBox="0 0 34 26" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M13.4887 19.3577L1.66959 8.38203C0.671102 7.45481 1.32443 5.78511 2.68643 5.7833L26.2758 5.75192C27.6378 5.75011 28.2986 7.41806 27.3042 8.34793L15.534 19.3549C14.9591 19.8925 14.066 19.8937 13.4887 19.3577Z" fill="white" stroke="#60A00C"/>
          <line x1="14.5" y1="20" x2="14.5" y2="26" stroke="#60A00C"/>
        </svg>
        <span class="filter_sign">Filter</span>
      </div>
      <div class="left_side_bar left_side_bar grid__item--1--3">
        <svg class="left_side_bar__close" width="21" height="22" viewBox="0 0 21 22" fill="none" xmlns="http://www.w3.org/2000/svg">
          <line x1="0.629232" y1="21.6645" x2="19.6292" y2="0.664543" stroke="#60A00C"/>
          <line x1="2.37963" y1="0.674604" x2="20.3796" y2="21.6746" stroke="#60A00C"/>
      </svg>
        <div class="left_side_bar__categories">
          <h1 class="left_side_bar__title">Product categories</h1>
          <div class="categories__list">
            {{#each categories}}
              <a id="{{this.id}}" class="category_link category_link{{this.id}}">{{this.name}}</a>
            {{/each}}
          </div>
        </div>
        <div class="left_side_bar__price">
          <h1 class="left_side_bar__title">Filter by Price</h1>
          <div class="range-slider">
            <input class="range-slider_gre" value='{{priceGre}}' min="0" max="200" step="5" type="range">
            <input class="range-slider_less" value='{{priceLess}}' min="0" max="200" step="5" type="range">
            <svg width="100%" height="24"></svg>
            <div class="range-slider__sign"><span>Price:</span><input type="text" value={{priceGre}} readonly><input type="text" value={{priceLess}} min="0" readonly></div>
        </div>
        </div>
        <div class="left_side_bar__color">
          <h1 class="left_side_bar__title">Filter by Color</h1>
          <div class="color__circles">
            <a class="circle green" id="green"></a>
            <a class="circle orange" id="orange"></a>
            <a class="circle red" id="red"></a>
            <a class="circle blue" id="blue"></a>
            <a class="circle yellow" id="yellow"></a>
          </div>
        </div>
        <div class="left_side_bar__size">
          <h1 class="left_side_bar__title">Filter by Size</h1>
          <div class="sizes">
            <a id="1" class="size size1">1kg</a>
            <a id="2" class="size size2">2kg</a>
            <a id="3"class="size size3">3kg</a>
            <a id="5" class="size size5">5kg</a>
            <a id="7" class="size size7">7kg</a>
            <a  id="8" class="size size8">8kg</a>
          </div>
        </div>
      </div>
      <div class="products grid__item--4--12">
        {{#if noResult}}
            <h1 class="products__result">No result</h1>
        {{/if}}
        {{#each products}}
          <div class="products__product_card product_card pr__detail" id={{this.id}}>
            <img src="{{this.images.[0].path}}" alt="" class="product_card__image">
            <div class="product_card__block">
              <div class="product_card__text text">
              <span class="text__name">{{this.name}}{{this.id}}</span>
              {{#if this.best_seller}}
                  <span class="text__best_seller">BEST SELLER</span>
                {{/if}}
              {{#if this.sale}}
              <span class="text__last_price">${{this.last_price}}</span>
              {{/if}}
              <span class="text__price">${{this.price}}</span>
              <span class="text__color">{{this.color}}</span>
              <span class="text__size">Size: {{this.size}}</span>
              <span class="text__category">Category: {{this.category.name}}</span>
              <span class="text__description">{{this.description}}</span>
              </div>
              <div class="product_card__buttons">
              <a class="icon fav" id={{this.id}}>
                {{> fav_icon_2}}
              </a>
              <a class="icon cart" id={{this.id}}>
                {{> basket_icon}}
              </a>
              <a href="{{this.id}}" class="icon open">
                {{> open_icon}}
              </a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
      <div class="products__pages grid__item--4--7">
         {{#if noResult}}
          {{true}}
        {{else}}
          {{{ page2 resultLength}}}
        {{/if}}
      </div>
    </section>
  </main>
  {{> footer_grid }}
  {{> copyright }}
  <script>let favouritesId = {{ favouritesId }};</script>
  <script src="/bundle.js"></script>
</body>
</html>